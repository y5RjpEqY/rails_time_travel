<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Rails / Time Travel
        <%= link_to "https://github.com/igorkasyanchuk/rails_time_travel", target: '_blank' do %>
          &nbsp;
          <span class="icon is-small">
            <i class="fab fa-github"></i>
          </span>
        <% end %>
      </h1>
      <h2 class="subtitle is-small">
        Change datetime for your session
      </h2>
    </div>
  </div>
</section>

<section class="mb-4">
  <p class="heading"> Current time</p>
  <p class="title"><%= Time.now %></p>
</section>

<div class="buttons">
  <% [5, 10, 20, 30, 40, 50, 60].each do |e| %>
    <%= button_to "-#{pluralize e, 'second'}", { action: :set_datetime, type: "seconds", value: e.seconds.to_i }, { class: "button is-light" } %>
  <% end %>
</div>

<div class="buttons">
  <% [1, 2, 5, 10, 20, 30, 50, 60, 100].each do |e| %>
    <%= button_to "-#{pluralize e, 'minute'}", { action: :set_datetime, type: "seconds", value: e.minutes.to_i }, { class: "button is-info" } %>
  <% end %>
</div>

<div class="buttons">
  <% [1, 2, 5, 10, 20, 30, 50, 100, 365].each do |e| %>
    <%= button_to "-#{pluralize e, 'day'}", { action: :set_datetime, type: "seconds", value: e.days.to_i }, { class: "button is-success" } %>
  <% end %>
</div>

<div class="buttons">
  <% [1, 2, 3, 4, 5].each do |e| %>
    <%= button_to "-#{pluralize e, 'month'}", { action: :set_datetime, type: "months", value: e }, { class: "button is-primary" } %>
  <% end %>
</div>

<div class="buttons">
  <% [1, 2, 3, 5].each do |e| %>
    <%= button_to "-#{pluralize e, 'year'}", { action: :set_datetime, type: "seconds", value: e.year.to_i }, { class: "button is-warning" } %>
  <% end %>
</div>

<% if session[:timecop_date].present? %>
  <div class="buttons">
    <%= button_to "reset time", { action: :set_datetime,  type: "reset" }, { class: 'button is-danger' } %>
  </div>
<% end %>